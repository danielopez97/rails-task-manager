<div class="container pt-5">
<h1 strong center><%= @task.title %></h1>
<blockquote class="blockquote border-start border-5 ps-3 mt-3">
  <p><%= @task.details %></p>
  <figcaption class="blockquote-footer">
    <cite title="Source Title">Description</cite>
  </figcaption>

<div class="container m-3">
    <%= link_to 'Edit this task', edit_task_path, class: "btn btn-primary" %>
</div>

<div class="container m-3">
  <%= button_to 'Delete', @task, method: :delete, class: "btn btn-primary" %>
</div>

</blockquote>

<%= link_to 'Back to tasks', tasks_path %>
